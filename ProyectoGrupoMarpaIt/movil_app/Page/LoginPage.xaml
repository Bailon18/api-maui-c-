<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="movil_app.Page.LoginPage"
             Title="LoginPage">

    <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" Padding="20">

        <Label
                Text="Bienvenidos!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="42"
                FontFamily="Chunk Five Print"
                HorizontalOptions="Center" Margin="0,10,0,10"/>

        <Image Source="grupomarpait.png" HeightRequest="130" WidthRequest="130" Margin="0,10,0,10" />

        <Entry Placeholder="Correo" Keyboard="Email" Margin="0,10,0,10" WidthRequest="300" />
        <Entry Placeholder="Contraseña" IsPassword="True" Margin="0,10,0,10" WidthRequest="300" />

        <Button Text="Iniciar Sesión" Clicked="OnLoginButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" WidthRequest="300" />
    </FlexLayout>

</ContentPage>
